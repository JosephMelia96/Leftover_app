<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"


    android:padding="16dp">

    <LinearLayout
        android:id="@+id/searchLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/search"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ,"
            android:hint="Search" />


    </LinearLayout>

    <TextView
        android:id="@+id/apiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchLL"
        android:text="TEST API OUTPUT"
        android:layout_centerHorizontal="true"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/apiText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:columnCount="2"
        android:background="#000000"

        android:rowCount="2">

        <ImageView
            android:id="@+id/breakfastView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="5dp"
            android:src="@drawable/breakfast" />

        <ImageView
            android:id="@+id/lunchView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="5dp"
            android:src="@drawable/lunch" />

        <ImageView
            android:id="@+id/dinnerView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/dinner" />

        <ImageView
            android:id="@+id/dessertView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/dessert" />

    </GridLayout>

</RelativeLayout>